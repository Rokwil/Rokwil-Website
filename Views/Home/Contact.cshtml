@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="page-hero">
    <div class="page-hero-content">
        <h1>Contact Us</h1>
        <p>Let's discuss your property development needs</p>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-content">
    <div class="container">
        <div class="contact-grid">
            <!-- Contact Form -->
            <div class="contact-form-container">
                <h2>Get In Touch</h2>
                <form class="contact-form" id="contactForm">
                    <div class="form-group">
                        <label for="name"><i class="bi bi-person-fill me-2"></i>Name</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="bi bi-envelope-fill me-2"></i>Email</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="phone"><i class="bi bi-telephone-fill me-2"></i>Phone</label>
                        <input type="tel" id="phone" name="phone">
                    </div>
                    <div class="form-group">
                        <label for="subject"><i class="bi bi-pencil-square me-2"></i>Subject</label>
                        <input type="text" id="subject" name="subject" required>
                    </div>
                    <div class="form-group">
                        <label for="message"><i class="bi bi-chat-dots-fill me-2"></i>Message</label>
                        <textarea id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send-fill me-2"></i>Send Message
                    </button>
                </form>
                <div id="formMessage" class="form-message"></div>
            </div>

            <!-- Contact Info -->
            <div class="contact-info">
                <h2>Contact Information</h2>

                <div class="info-item">
                    <div class="info-icon text-primary">
                        <i class="bi bi-geo-alt-fill fs-3"></i>
                    </div>
                    <div class="info-content">
                        <h3>Location</h3>
                        <p>KwaZulu-Natal, South Africa</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon text-primary">
                        <i class="bi bi-envelope-fill fs-3"></i>
                    </div>
                    <div class="info-content">
                        <h3>Email</h3>
                        <p>rod@rokwil.com</p>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon text-primary">
                        <i class="bi bi-building fs-3"></i>
                    </div>
                    <div class="info-content">
                        <h3>Office Hours</h3>
                        <p>Monday - Friday: 8:00 AM - 5:00 PM</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const formMessage = document.getElementById('formMessage');
            formMessage.textContent = 'Thank you for your message! We will get back to you soon.';
            formMessage.className = 'form-message success';
            this.reset();
            setTimeout(() => {
                formMessage.textContent = '';
                formMessage.className = 'form-message';
            }, 5000);
        });
    </script>
}

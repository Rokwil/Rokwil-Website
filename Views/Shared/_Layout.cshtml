<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rokwil Property Development</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a asp-controller="Home" asp-action="Index">
                    <span class="logo-text">ROKWIL</span>
                    <span class="logo-subtitle">Property Development</span>
                </a>
            </div>
            <ul class="nav-menu">
                <li><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                <li><a asp-controller="Home" asp-action="About" class="nav-link">About</a></li>
                <li><a asp-controller="Home" asp-action="Projects" class="nav-link">Projects</a></li>
                <li><a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a></li>
            </ul>
            <div class="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>ROKWIL</h3>
                    <p>Building the future of property development in KwaZulu-Natal, South Africa.</p>
                </div>
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-controller="Home" asp-action="Projects">Projects</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Contact</h4>
                    <p>KwaZulu-Natal, South Africa</p>
                    <p>Email: rod@rokwil.com</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year Rokwil Property Development. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

